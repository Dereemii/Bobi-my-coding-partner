{
  "devDependencies": {
    "sass": "^1.62.1",
    "stylelint": "^15.6.1",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "scripts": {
    "sass-dev": "sass --watch --update --style=expanded assets/scss:assets/styles",
    "sass-prod": "sass --no-source-map --style=compressed assets/scss:assets/styles",
    "lint:styles": "npx stylelint \"**/*.scss\"",
    "fix:styles": "npx stylelint \"**/*.scss\" --fix"
  }
}
